<div class="col-lg-10">
  <h1>Listing Students</h1>
  <%= link_to 'New Student', new_student_path, class:"btn btn-primary btn-lg mt-3 mb-3" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Student</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.full_name %></td>
          <td><%= student.email %></td>
          <td> <%= link_to 'View', student, class:"link-primary" %> </td>
          <td> <%= link_to 'Edit', edit_student_path(student), class:"link-primary"  %> </td>
          <td> <%= button_to 'Delete', student_path(student), class:"btn btn-danger", method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
