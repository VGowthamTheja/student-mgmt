<div class="col-lg-10">
  <h1>Projects</h1>
  <%= link_to "New project", new_project_path, class:"btn btn-primary mb-3" %>
  <div id="projects">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td> <%= link_to 'View', project, class:"link-primary" %> </td>
          <td> <%= link_to 'Edit', edit_project_path(project), class:"link-primary"  %> </td>
          <td> <%= button_to 'Delete', project_path(project), class:"btn btn-danger", method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>
</div>
