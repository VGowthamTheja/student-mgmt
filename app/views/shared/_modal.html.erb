<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Assign Student</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @student_project, url: student_projects_path do |f| %>
          <div class="form-group">
            <%= f.label :submission_date %>
            <%= f.date_field :submission_date, class:"form-control form-control-lg", as: :date %>
          </div>
          <div class="form-group">
            <%= f.label :student_id, class:"form-label mt-3" %>
            <%= f.select :student_id, @project.student_list,{}, { :class => "form-select" } %>
          </div>
          <div class="form-group">
            <%= f.label :project_id, class:"form-label mt-3" %>
            <%= f.number_field :project_id, class:"form-control" , :readonly => true, :value => @project.id %>
          </div>
          <div class="form-group">
            <%= f.submit "Save changes", class:"btn btn-primary btn-sm mt-3" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>